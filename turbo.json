{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
        "dependsOn": ["^lint"]
    },
    "lint:fix": {
        "dependsOn": ["^lint:fix"]
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^typecheck"]
    }
  }
}